$color-primary = #40db4e
$color-secondary = #333
$color-text = #888

$wrapper-size = 1100px

$font-default = -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
$font-title = 'GreycliffCF', sans-serif
$font-alt = 'OdudoMono', monospace

$phone = 580px
$tablet = 880px
$desktop-small = 1000px
$desktop-large = 1260px
$desktop-big = 1480px
$desktop-xbig = 1630px

rupture.use-device-width = false
rupture.scale = 0 $phone $tablet $desktop-small $desktop-large $desktop-big $desktop-xbig
rupture.scale-names = 'phone' 'tablet' 'desktop-small' 'desktop-large' 'desktop-big' 'desktop-xbig'
