html, body
  height: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

body
  font-size: 62.5%
  background: #eee
  font-family: 'Arial', helvetica, sans-serif
  
.header
  position: relative
  display: flex
  height: 55em
  background: url('../img/bg-floripa.jpg') no-repeat top center
  overflow: hidden

  &:after
    content: ''
    absolute: bottom right left top
    background: linear-gradient(top, #999, #222)
    opacity: .8
    
  &:before
    section-divisor()


.header-wrapper
  width: 25em
  margin: auto
  z-index: 100


// -------
// section
// -------
.section-about
  padding: 4em 0

.section-wrapper
  z-index: 20
  @extends $section-wrapper

.section-title
  width: 40%
  
.section-title--item
  margin: 0
  padding: 0
  font-family: $font-title
  font-weight: 900
  font-size: 5em
  color: $color-secondary
  position: relative
  display: inline-block
  
  &:after
    content: ''
    display: block
    width: .22em
    height: @width
    position: absolute
    right: -(@width + .1)
    bottom: @width
    border-radius: 50%
    background: $color-primary

.section-content
  width: 100%
  
.section-text
  color: $color-text
  font-size: 1.7em
  font-family: $font-title
  font-weight: 400
  line-height: 2em
  width: 95%
  
  a
    color: $color-text
    text-decoration: none
    border-bottom: 1px dotted #888
    padding-bottom: .1em
    font-weight: 700
    
    &:hover
      color: $color-primary


// section: meetup
.section-meetup
  padding-top: 7em
  position: relative
  display: flex
  height: 55em
  background: url('../img/bg-header.jpg') no-repeat top center
  overflow: hidden

  &:after
    content: ''
    absolute: bottom right left top
    background: linear-gradient(top, #eee, #ccc)
    opacity: .8
    
  &:before
    section-divisor(#eee, 'left', 'top')
